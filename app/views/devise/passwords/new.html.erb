<head>
  <%=stylesheet_link_tag "reset_confirm.css"%>
<div class="head-container">
  <h2 class="rescon-title">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="rescon-field">
      <%= f.label :email, class: "rescon-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rescon-input" %>
    </div>

    <div class="rescon-actions">
      <%= f.submit "Send me reset password instructions", class: "rescon-button" %>
    </div>
  <% end %>

    <%= render "devise/shared/links" %>
</div>
