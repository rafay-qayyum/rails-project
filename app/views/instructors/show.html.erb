<head>
  <%= stylesheet_link_tag "instructor_index" %>
  <title>Course Catalog</title>
</head>
<body>
    <h2 class="welcome-message"> Welcome <%= current_instructor.name %>!</h2>
    <h1 class="page-title">Course Catalog</h1>
    <main class="course-list">
        <% if @courses.empty? %>
          <h2 class="no-courses">No courses yet</h2>
        <% else %>
          <%= render partial: "layouts/courses_show", collection: @courses, as: :course %>
        <% end %>
    </main>
</body>
