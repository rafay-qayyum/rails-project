<script src="https://cdn.jsdelivr.net/npm/easymde@2.10.0/dist/easymde.min.js"></script>
<%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/easymde@2.10.0/dist/easymde.min.css" %>
<% if chapter.errors.any? %>
  <% chapter.errors.full_messages.each do |message|%>
  <h4><%= message %> </h4>
  <%end%>
<%end%><br>

<div class="create-chapter">
  <h1 class="main-heading">Create a New Chapter</h1>
  <%= form_for [course,chapter], html: { multipart: true } do |f| %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, required: true %>
    </div>

    <div class="form-group">
      <%= f.label :content %>
      <div class="markdown-input">
        <%= f.text_area :content, id: "markdownInput", required: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="custom-file-input">
      <%= f.label :quiz %>
      <%= f.file_field :quiz, required: true, accept: 'application/pdf' %>
        <% if chapter.quiz.attached? %>
          <p>Quiz: <%= link_to chapter.quiz.filename, chapter.quiz %></p>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <div class="custom-file-input">
      <%= f.label :assignment %>
      <%= f.file_field :assignment, required: true, accept: 'application/pdf' %>
        <% if chapter.assignment.attached? %>
          <p>Assignment: <%= link_to chapter.assignment.filename, chapter.assignment %></p>
        <% end %>
      </div>
    </div>

    <%= f.hidden_field :course_id, :value => course %>
    <%= f.submit "Create Chapter", class: "btn-primary" %>
  <% end %>
</div>

<br>
<div class="buttons-container">
  <%= link_to "Back to Course", course_path(@chapter.course), class:"button"%>
</div>

<script>
  var markdownEditor = new EasyMDE({
    element: document.getElementById("markdownInput"),
    autoDownloadFontAwesome: false,
    renderingConfig: {
      singleLineBreaks: false,
      codeSyntaxHighlighting: true
    },
    autofocus: true,
    toolbar: false,
    toolbarTips: false
});
</script>

