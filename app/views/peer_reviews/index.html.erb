<head>
  <title>Student Peer Reviews</title>
  <%= stylesheet_link_tag 'student_reviews' %>
</head>
<body>
  <h1>Peer Reviews and Marks</h1>

  <div class="reviews">
    <h2>Your Peer Reviews</h2>
    <% @peer_reviews.each do |review| %>
      <div class="review-card">
        <h3>Review <%= review.id %></h3>
        <p>Assignment Marks: <%= review.assignment_marks %></p>
        <p>Quiz Marks: <%= review.quiz_marks %></p>
      </div>
    <% end %>
  </div>

  <div class="averages">
    <h2>Average Marks</h2>
    <p>Average Assignment Marks: <%= @avg_assignment_marks %></p>
    <p>Average Quiz Marks: <%= @avg_quiz_marks %></p>
    <p>Average Total Marks: <%= @avg_total_marks %></p>
  </div>

  <div class="back-button">
    <%= link_to 'Back to Chapter', course_chapter_path(@chapter.course, @chapter), class: 'button' %>
  </div>
</body>
